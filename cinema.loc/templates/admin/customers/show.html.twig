{% extends 'base.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
    <h1>Customers</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ users.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ users.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ users.roles|json_encode(constant('JSON_PRETTY_PRINT')) }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ users.name }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ users.nickname }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ users.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_customers_index') }}">back to list</a>

    <a href="{{ path('admin_customers_edit', {'id': users.id}) }}">edit</a>

    {{ include('admin/customers/_delete_form.html.twig') }}
{% endblock %}
