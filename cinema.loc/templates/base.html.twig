<body>{% block navbar %}
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a href="{{ path('main') }}" class="navbar-brand mb-0 h1">CINEMA</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupport">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('main') }}">Home<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('seanse_index') }}">Seanses</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('hall_index') }}">Halls</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">My Pofile</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="orders.html">My Orders</a>
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Action1</a>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Admin Panel</a>
                    </li>
                {% endif %}
            </li>
        </ul>
        {% if app.user %}
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><a href="{{ path('app_logout') }}">Sign out</a></button>
        {% else %}
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><a href="{{ path('app_login') }}">Sign in</a></button>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><a href="{{ path('sign_up') }}">Sign up</a></button>
        {% endif %}

    </div>
</nav>
{% endblock %}

{% block body %}{% endblock %}

{% block javascripts %}<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
