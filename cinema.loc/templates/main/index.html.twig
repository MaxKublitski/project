{% extends 'base.html.twig' %}

{% block title %}The Cinema{% endblock %}

{% block body %}
    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Welcome to The Cinema{% if app.user %}, {{ app.user.name }} {% else %}{% endif %}!</h1>
            <p class="lead text-muted">We created the best ticket manager for you. Enjoy!</p>
        </div>
    </section>

    <main role="main">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="bd-placeholder-img" width="100%" height="100%" src="{{ asset('img/avengers-infinity-war_1a2d_2880x1800.jpg') }}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" ><rect fill="#777" width="100%" height="100%"/></img>
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>Premiere!</h1>
                            <p>Description</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" width="100%" height="100%" src="{{ asset('img/blade-runner-2049_fc2e_2880x1800.jpg') }}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" ><rect fill="#777" width="100%" height="100%"/></img>
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>Another premiere!</h1>
                            <p>Description</p>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="bd-placeholder-img" width="100%" height="100%" src="{{ asset('img/thor-ragnarok_d335_2880x1800.jpg') }}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" ><rect fill="#777" width="100%" height="100%"/></img>
                    <div class="container">
                        <div class="carousel-caption text-left">
                            <h1>One more premiere!</h1>
                            <p>Description</p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </main>

    <div class="album py-4 bg-light">
        <div class="container">

            <h2 class="month-premier text-center text-muted">Seanses Today</h2>
            <br>
            <div class="row">

                {% for seanse in todaySeanses %}
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <img class="bd-placeholder-img card-img-top" width="100%" height="100%" src="{{ asset('img/') ~ seanse.img }}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect fill="#55595c" width="100px" height="100px"/></img>
                        <div class="card-body">
                            <p class="card-text"><b>{{ seanse.title }}</b></p>
{#                            <p class="card-description">{{ seanse.movie.description }}</p>#}
{#                            <p class="card-text"><b>{{ seanse.time ? seanse.time|date('H:i:s') : '' }}</b></p>#}
                            <p class="card-text"><b>{{ seanse.date ? seanse.date|date('Y-m-d') : '' }}</b></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('movies_show', {'id':seanse.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">View</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <h2 class="month-premier text-center text-muted">Seanses Tomorrow</h2>
            <br>
            <div class="row">

                {% for seanse in tomorrowSeanses %}
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="100%" src="{{ asset('img/' ~ seanse.img) }}" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect fill="#55595c" width="100%" height="100%"/></img>
                            <div class="card-body">
                                                            <p class="card-text"><b>{{ seanse.title }}</b></p>
                                {#                            <p class="card-description">{{ seanse.movie.description }}</p>#}
                                {#                            <p class="card-text"><b>{{ seanse.time ? seanse.time|date('H:i:s') : '' }}</b></p>#}
                                <p class="card-text"><b>{{ seanse.date ? seanse.date|date('Y-m-d') : '' }}</b></p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('movies_show', {'id':seanse.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">View</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
        </div>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">Footer</span>
        </div>
    </footer>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
{% endblock %}