{% extends 'base.html.twig' %}

{% block title %}Seanse index{% endblock %}

{% block body %}
    <h1>Seanse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Movie Title</th>
                <th>Time</th>
                <th>Date</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        {% for seanse in seanses %}
